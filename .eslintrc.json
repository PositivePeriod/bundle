{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "indent": [
            "error",
            4
        ],
        "no-plusplus": "off",
        "object-curly-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-new": "off"
    }
}